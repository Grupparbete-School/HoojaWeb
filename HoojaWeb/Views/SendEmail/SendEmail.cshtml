@{
    ViewBag.Title = "Send Email";
}

<div class="container container-fluid mt-5 ">
    <div class="col-md-6 mx-auto bg-light p-4">
        <h2>Send Email</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success">@ViewBag.Message</div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.Label("From Email:")
                @Html.TextBox("fromEmail", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Subject:")
                @Html.TextBox("subject", null, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Body:")
                @Html.TextArea("body", null, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Send Email</button>
        }
    </div>
</div>
