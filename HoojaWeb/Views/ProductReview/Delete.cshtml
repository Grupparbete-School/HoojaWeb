@model IEnumerable<HoojaWeb.ViewModels.ProductReview.ProductReviewEditViewModel>

@{
    ViewData["Title"] = "Delete review";
}

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="" asp-controller="ProductReview" asp-action="Index">Reviews</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete review</li>
    </ol>
</nav>
<!-- Breadcrumbs end -->

<div class="container container-fluid mt-5 container-lightblue">
    <div class="text-center mt-2">
        <h2>Edit review</h2>
        <hr />
    </div>

    <div class="row my-3 mx-3">
        <div class="col-md-5 mt-4">
            <img src="https://images.unsplash.com/photo-1580618864180-f6d7d39b8ff6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1169&q=80" class="frame-img" />

        </div>
        @foreach (var review in Model)
        {
            
        <div class="col-md-7">
            <form asp-action="DeleteConfirmed" method="post" class="mt-3">
                <div class="form-group col-md-12 mt-3">
                    <label class="form-label form-label-custom fw-bold">Review ID:</label>
                    <br/>
                        @review.ReviewId
                </div>

                <div class="form-group col-md-12 mt-3">
                    <label class="form-label form-label-custom fw-bold">Customer Name:</label>
                        <br />
                        @review.CustomerName
                </div>

                <div class="form-group col-md-12 mt-3">
                    <label for="review" class="form-label form-label-custom fw-bold">Review:</label>
                        <br />
                        @review.Review
                </div>

                <div class="form-group col-md-12 mt-3">
                    <label for="rating" class="form-label form-label-custom fw-bold">Rating:</label>
                        <br />
                    @review.Rating / 5
                        
                </div>

                <hr />
                <div class="col-md-12 mt-3">
                        <input type="hidden" name="reviewId" value="@review.ReviewId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
        }
    </div>
</div>


<style>
    .star-rating input[type="radio"] {
        display: none;
    }

    .star-rating label {
        display: inline-block;
        cursor: pointer;
        color: #ccc;
        font-size: 24px;
    }

        .star-rating label:hover,
        .star-rating label:hover ~ label,
        .star-rating input[type="radio"]:checked ~ label {
            color: #ffcc00;
        }
</style>


