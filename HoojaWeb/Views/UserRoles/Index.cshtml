@model List<HoojaWeb.ViewModels.UserRole.UserRolesGetViewModel>
@using HoojaWeb.ViewModels
@using HoojaWeb.ViewModels.UserRole;



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card text-center mt-5 ">
    <div class="card-header">
        <h1>User Roles</h1>
    </div>

    <div class="card-body">
   @*     <a class="btn btn-primary" asp-controller="RoleManager" asp-action="Index">Add new Roles</a>
        <a class="btn btn-dark" asp-controller="LoanHistories" asp-action="GetUserBook">Dashboard</a>*@
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Email Confirmed</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.EmailConfirmed</td>
                        <td>@string.Join(" , ", user.Roles.ToList())</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @*<partial name="_ManageUserRoles" model="new List<ManageUsersRolesViewModel>()" />*@
</div>

