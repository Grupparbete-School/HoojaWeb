@model HoojaWeb.Models.PostNord.PostNordRequestModel
@using HoojaWeb.ViewModels.PostNord

<h1>PostNord API - Transit Time Information</h1>

<div class="container">
    <div class="card text-center mt-5">
        <div class="card-header">
            <h1>Transit Time Calculation</h1>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("GetTransitTimeInformation", "PostNord", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.FromAddressPostalCode, "From Postal Code:")
                    @Html.TextBoxFor(m => m.FromAddressPostalCode, new { @class = "form-control", @id = "origin" })
                    @Html.ValidationMessageFor(m => m.FromAddressPostalCode)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ToAddressPostalCode, "To Postal Code:")
                    @Html.TextBoxFor(m => m.ToAddressPostalCode, new { @class = "form-control", @id = "destination" })
                    @Html.ValidationMessageFor(m => m.ToAddressPostalCode)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.DateOfDeparture, "Date:")
                    @Html.TextBoxFor(m => m.DateOfDeparture, new { @class = "form-control", @id = "dateOfDeparture" })
                    @Html.ValidationMessageFor(m => m.DateOfDeparture)
                </div>

                <!-- Add other input fields for the remaining request parameters -->

                <button type="submit" class="btn btn-primary">Calculate Transit Time</button>
            }

            <div class="mt-3">
                <div class="card bg-info text-white">
                    <div class="card-body" id="result"></div>
                </div>
            </div>
        </div>
    </div>
</div>

