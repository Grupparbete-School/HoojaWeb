@using Newtonsoft.Json;
@using Newtonsoft.Json.Linq;

@model string

@{
    ViewData["Title"] = "Transit Time Information";
}

<div class="container">
    <div class="card text-center mt-5">
        <div class="card-header">
            <h1>Transit Time Information</h1>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model))
            {
                var result = JsonConvert.DeserializeObject<JObject>(Model);

                <div class="card bg-info text-white">
                    <div class="card-body">
                        <p><strong>Latest Time of Booking:</strong> @result["se.posten.loab.lisp.notis.publicapi.serviceapi.TransitTimeResponse"]["transitTimes"][0]["latestTimeOfBooking"]</p>
                        <p><strong>Delivery Time:</strong> @result["se.posten.loab.lisp.notis.publicapi.serviceapi.TransitTimeResponse"]["transitTimes"][0]["deliveryTime"]</p>
                        <p><strong>Delivery Date:</strong> @result["se.posten.loab.lisp.notis.publicapi.serviceapi.TransitTimeResponse"]["transitTimes"][0]["deliveryDate"]</p>
                        <p><strong>Transit time in days:</strong> @result["se.posten.loab.lisp.notis.publicapi.serviceapi.TransitTimeResponse"]["transitTimes"][0]["transitTimeInDays"]</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
